<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_8"
    android:layout_marginEnd="@dimen/dp_8"
    android:layout_marginBottom="@dimen/dp_8"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/teal_700">

        <ImageView
            android:id="@+id/articleItemImageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_size_large"
            android:contentDescription="@string/article_item_content_description"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/articleTextViewTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/all_label_placeholder"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_50"
            app:layout_constraintTop_toBottomOf="@+id/articleItemImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="@dimen/dp_8" />

        <TextView
            android:id="@+id/articleTextViewSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_label_placeholder"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            app:layout_constraintTop_toBottomOf="@+id/articleTextViewTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/dp_8" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>